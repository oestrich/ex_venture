<div class="sm:mx-auto sm:w-full sm:max-w-md">
  <%= img_tag("/images/exventure.png", class: "mx-auto h-32 w-auto", alt: "ExVenture Logo") %>

  <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
    Register for <%= gettext("ExVenture") %>
  </h2>
</div>

<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <%= form_for(@changeset, Routes.registration_path(@conn, :create), [class: "space-y-6"], fn f -> %>
      <div>
        <%= label(f, :username, class: "block text-sm font-medium text-gray-700") %>
        <div class="mt-1">
          <%= text_input(f, :username, autofocus: true, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm") %>
        </div>
      </div>

      <div>
        <%= label(f, :email, class: "block text-sm font-medium text-gray-700") %>
        <div class="mt-1">
          <%= text_input(f, :email, autocomplete: "email", required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm") %>
        </div>
      </div>

      <div>
        <%= label(f, :password, class: "block text-sm font-medium text-gray-700") %>
        <div class="mt-1">
          <%= password_input(f, :password, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm") %>
        </div>
      </div>

      <div>
        <%= label(f, :password_confirmation, class: "block text-sm font-medium text-gray-700") %>
        <div class="mt-1">
          <%= password_input(f, :password_confirmation, required: true, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm") %>
        </div>
      </div>

      <div>
        <%= submit("Register", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500") %>
      </div>
    <% end) %>
  </div>
</div>
